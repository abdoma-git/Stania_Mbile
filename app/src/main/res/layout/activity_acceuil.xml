<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acceuil">

    <Button
        android:id="@+id/acceuil"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:background="#3101A1"
        android:text="Acceuil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/matchs"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:background="#3101A1"
        android:text="Matchs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acceuil" />

    <Button
        android:id="@+id/parier"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:background="#3101A1"
        android:text="Parier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/matchs" />

    <Button
        android:id="@+id/espace"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_marginStart="-10dp"
        android:background="#3101A1"
        android:text="Mon Espace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/parier" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="436dp"
        android:layout_height="683dp"
        android:layout_marginTop="-170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="131dp"
        android:layout_height="139dp"
        android:layout_marginBottom="135dp"
        app:layout_constraintBottom_toTopOf="@+id/acceuil"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cin" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-130dp"
        android:text="Match En Cours"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="97dp"
        android:layout_height="117dp"
        android:layout_marginStart="-130dp"
        android:layout_marginBottom="149dp"
        app:layout_constraintBottom_toTopOf="@+id/espace"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:srcCompat="@drawable/nfl" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="-290dp"
        android:text="2   :   1"
        android:textSize="48sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="-400dp"
        android:text="SUPER BOWL"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-510dp"
        android:text="STANIA"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>